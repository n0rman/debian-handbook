#, no-c-format
msgid "<primary>Michlmayr, Martin</primary>"
msgstr ""

#. Tag: indexterm
#, no-c-format
msgid "<primary>Robinson, Branden</primary>"
msgstr ""

#. Tag: indexterm
#, no-c-format
msgid "<primary>Towns, Anthony</primary>"
msgstr ""

#. Tag: indexterm
#, no-c-format
msgid "<primary>Hocevar, Sam</primary>"
